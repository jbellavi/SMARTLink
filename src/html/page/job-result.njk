{% extends "layout.njk" %}

{% block title %}SMART Connect{% endblock %}

{% block content %}
<h2 id="title" class="job-title"></h2>
<div class="job-body">
	<div class="job-left">
		<div class="save">Save Opportunity</div>
		<span id="organization" class="quick-info"></span>
		<span id="compensation" class="quick-info"></span>
		<a id="link" class="apply">Apply</a>
		<span id="deadline" class="quick-info"></span>
	</div>
	<div class="job-right">
		<h3 class="job-info-title">Description</h3>
		<p id="description" class="job-info"></p>
		<h3 class="job-info-title">Qualifications</h3>
		<p id="qualifications" class="job-info"></p>
		<h3 class="job-info-title">Commitment</h3>
		<p id="commitment" class="job-info"></p>
		<h3 class="job-info-title">How To Apply</h3>
		<p id="how-to-apply" class="job-info"></p>
		<h3 class="job-info-title">About us</h3>
		<p id="about" class="job-info"></p>
	</div>
</div>
{% endblock %}

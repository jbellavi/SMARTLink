{% extends "job.njk" %}

{% block results %}
<h2 class="results-count">
    Search Results
</h2>
<div class="results-block">
	<div class="filter-column">
        <label class="container">Internships
            <input id="internships-checkbox" type="checkbox" checked>
            <span class="checkmark"></span>
        </label>
        <label class="container">Research
            <input id="research-checkbox" type="checkbox" checked>
            <span class="checkmark"></span>
        </label>
        <label class="container">People
            <input id="people-checkbox" type="checkbox" checked>
            <span class="checkmark"></span>
        </label>
	</div>
	<div id="results" class="results-column">
        <!-- Injected when search API call returns -->
	</div>
</div>

{% endblock %}
